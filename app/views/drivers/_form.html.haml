= form_for @driver do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :street1
    %br
    = f.text_field :street1
  %p
    = f.label :street2
    %br
    = f.text_field :street2
  %p
    = f.label :city
    %br
    = f.text_field :city
  %p
    = f.label :zip
    %br
    = f.text_field :zip
  %p
    = f.submit
